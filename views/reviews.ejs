<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reviews</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <section class="reviews">
    <h1 class="reviews-title">Reviews</h1>
    <ul class="flex">
    <% reviews.forEach( el => { %>
            <li class='reviewItem flex column' data-id='<%=el._id%>'>
                <span class='title'><%= el.movie %></span>
                <!-- <img class='movieImg'><%= el.img %></img> -->
                <span class='rating'><%= el.rating %></span>
                <p class='review'><%= el.review %></p>
                <button class='del button button-small'> Delete </button>
            </li>
    <% }) %>    
    </ul>

    <a href="/reviews/newReview"><button class="button">Add a review</button></a>

    <a href="/logout"><button class="button">Logout</button></a>
    </section>
    <script src="../js/main.js"></script>
</body>
</html>